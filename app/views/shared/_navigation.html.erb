<div class="navigation">
        <div class="navigation-container">
          <div class="menubar">
            <%= link_to root_path do %><%= image_tag "logo-icon.svg" %><% end %>
          </div>
          <%= image_tag "menu-bar.png", class: 'icon-bar' %>
          <div class="menu-item">
            <ul>
              <li class="<%= active_class(root_url) %>">
                <%= link_to root_path do %><i class="fas fa-home mr-1"></i><span>Home</span><% end %>
              </li>
              <li class="<%= active_class(about_url) %>">
                <%= link_to about_path do %><i class="fas fa-sticky-note mr-1"></i><span>About</span><% end %>
              </li>
              <li class="<%= active_class(list_blog_url) %>">
                <%= link_to list_blog_path do %><i class="fas fa-rss-square mr-1"></i><span>Blog</span><% end %>
              </li>
              <li id="icon-search">
                <i class="fas fa-search"></i>
              </li>
              <% if current_user %>
                <li>
                  <div class="dropdownMenu">
                    <button class="buttonMenu"><i class="fa-solid fa-user mr-1"></i><%= current_user.email %> <i class="fa fa-angle-down ml-1"></i></button>
                    <div class="dropdownMenuItem">
                      <ul>
                        <li><i class="fa-solid fa-user-gear mr-1"></i><%= link_to "Profile", edit_user_registration_path %></li>
                        <li><i class="fa-solid fa-screwdriver-wrench mr-1"></i><%= link_to "Admin", home_admin_path %></li>
                        <li><i class="fa-solid fa-arrow-right-from-bracket mr-1"></i><%= button_to "Logout", destroy_user_session_path, method: :delete %></li>
                      </ul>
                    </div>
                  </div>
                </li>
              <% else %>
                <li>
                  <%= link_to home_admin_path do %><i class="fa-solid fa-screwdriver-wrench mr-1"></i><span>Admin</span><% end %> 
                </li>
              <% end %>
            </ul>
          </div>
          <!-- end of div menu-item -->
        </div>
        <!-- end of div navbar-container -->
      </div>
      <!-- end of div navbar -->
