<% content_for :head do %>
  Show Blog
<% end %>

<div class="container contentShowBlog p-5">
  <div class="row">
    <div class="col-md-6 col-sm-12"><%= image_tag(@blog.urlimage, style: 'width: 100%; height: 300px;') %></div>
    <div class="col-md-6 col-sm-12">
      <div class="d-flex justify-content-between mb-3">
        <%= link_to 'Edit', edit_blog_path(@blog), class: 'btn btn-dark' %>
        <%= link_to 'Back', blogs_path, class: 'btn btn-primary' %>
      </div>
      <div class="row">
        <div class="col-sm-3"><strong>Title</strong></div>
        <div class="col-sm-9"><%= link_to @blog.title, blog_item_path(:id => @blog.id, :slug => blog.slug), class: 'title' %></div>
        <div class="col-sm-3"><strong>Category</strong></div>
        <div class="col-sm-9"><%= @blog.category.title %></div>
        <div class="col-sm-3"><strong>Content</strong></div>
        <div class="col-sm-9"><%= strip_tags(@blog.content[0...150]) %> ...</div>
        <div class="col-sm-3"><strong>Tag</strong></div>
        <div class="col-sm-9">
          <% @blog.tags.each do |tag| %>
            <%= link_to tag.title, blog_current_tag_path(:id => tag.id), class: "badge badge-pill bg-primary" %>
          <% end %>
        </div>
      </div><!-- end of div row -->
    </div><!-- end of div col-md-6 col-sm-12 -->
  </div><!-- end of div row -->
</div><!-- end of div contentShowBlog -->